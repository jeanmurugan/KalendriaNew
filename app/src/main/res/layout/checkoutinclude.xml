<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    android:shrinkColumns="*"
    android:stretchColumns="*">


    <!-- Row 2 with 3 columns -->
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/service_nameLable"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:gravity="left|center_horizontal"
            android:layout_marginLeft="@dimen/_2sdp"
            android:text="Hair Bleaching chin"

            android:textColor="#000000" />


        <TextView
            android:id="@+id/service_duration"
            android:height="@dimen/_20sdp"
            android:layout_width="@dimen/_25sdp"
            android:background="#CDEAF8"
            android:gravity="center"
            android:text=""
            android:textScaleX="0.8"
            android:layout_marginTop="5dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/service_price"
            android:background="#7FCBED"
            android:layout_width="@dimen/_25sdp"
            android:gravity="center"
            android:height="@dimen/_20sdp"
            android:text=""
            android:textScaleX="0.8"
            android:layout_marginTop="5dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/service_deiscount"
            android:height="@dimen/_20sdp"
            android:layout_width="@dimen/_25sdp"
            android:background="#0098DC"
            android:gravity="center"
            android:text="10"
            android:textScaleX="0.8"
            android:layout_marginTop="5dp"
            android:textColor="#FFFFFF" />


    </TableRow>

    <!-- Row 3 with 2 columns -->
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@color/colorGrey"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/servicedateLable"
            android:layout_width="@dimen/_60sdp"

            android:gravity="left"
            android:text="Date/Time"
            android:layout_marginLeft="@dimen/_2sdp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/service_date"
            android:layout_weight="1"
            android:background="@color/colorLightGreen"
            android:gravity="center"
            android:textScaleX="0.8"
            android:height="@dimen/_22sdp"
            android:text="05-24-2016"
            android:textColor="@color/colorWhite" />


        <TextView
            android:id="@+id/service_time"
            android:layout_weight="1"
            android:background="@color/colorLightGreen"
            android:gravity="center"
            android:textScaleX="0.8"
            android:layout_marginLeft="@dimen/_2sdp"
            android:height="@dimen/_22sdp"
            android:text="23:55-23:55"
            android:textColor="@color/colorWhite" />
    </TableRow>


    <!-- Row 3 with 2 columns -->
    <TableRow
        android:id="@+id/staffrow"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGrey"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/staffname_lable"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:layout_gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/_2sdp"
            android:text="Select Staff"
            android:textColor="#000000" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <com.kalendria.kalendria.utility.CircularNetworkImageView
                android:id="@+id/thumbnail"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/avatar"
                android:layout_gravity="center_vertical|left"
                android:visibility="visible" />

            <TextView
                android:id="@+id/staffName"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="5dp"
                android:layout_height="match_parent"
                android:gravity="left|center_vertical"
                android:layout_weight="1"
                android:textScaleX="0.8"
                android:layout_width="0dp"
                android:text="Test user"
                android:textColor="#000" />


            <ImageButton
                android:id="@+id/category_autocompleted_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="right|center"
                android:background="@android:color/white"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/expand" />
        </LinearLayout>

    </TableRow>
</TableLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#0097dc"
    android:id="@+id/addtocart_header_rl"
    android:padding="8dp">

    <!-- Thumbnail Image -->
    <com.kalendria.kalendria.utility.CircularNetworkImageView
        android:id="@+id/thumbnail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp"
         />
    <!--android:background="@drawable/faverote_icon"-->
    <TextView
        android:id="@+id/addtocart_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:gravity="left"
        android:text="murugan"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold" />-

    <TextView
        android:id="@+id/addtocard_cityregion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="murugan"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_12sdp" />


</RelativeLayout>

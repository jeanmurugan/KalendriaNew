<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/logo_header" />


        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="#0097db">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:layout_marginLeft="10dp"
                android:fontFamily="Arial"
                android:lines="1"
                android:padding="5dp"
                android:text="Sign Up"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <Button
                android:id="@+id/register_back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="#0079b0"
                android:text="Back"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
        </FrameLayout>

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#D6D6D6">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/email_icon" />

                <EditText
                    android:id="@+id/register_email_et"
                    style="@style/MyAutoCompleteTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:hint="Email Address"
                    android:inputType="textEmailAddress"
                    android:nextFocusDown="@+id/register_username_et"
                    android:textColor="#313031"
                    android:textColorHint="#313031"
                    android:textSize="17dp" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#D6D6D6">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_icon" />

                <EditText
                    android:id="@+id/register_username_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:hint="First Name"
                    android:maxLength="20"
                    style="@style/MyAutoCompleteTextView"
                    android:inputType="text"
                    android:nextFocusDown="@+id/register_lastname_et"
                    android:textColor="#313031"
                    android:textColorHint="#313031"
                    android:textSize="17dp" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#D6D6D6">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_icon" />

                <EditText
                    android:id="@+id/register_lastname_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:hint="Last Name"
                    android:maxLength="20"
                    style="@style/MyAutoCompleteTextView"
                    android:inputType="text"
                    android:nextFocusDown="@+id/register_phone_et"
                    android:textColor="#313031"
                    android:textColorHint="#313031"
                    android:textSize="17dp" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#D6D6D6">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/city_icons" />



                <RelativeLayout
                    android:id="@+id/search_bar"
                    android:layout_below="@+id/header"
                    android:layout_width="fill_parent"
                    android:background="#D6D6D6"
                    android:layout_height="50dp">

                    <TextView
                        android:id="@+id/register_spinner"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:background="#D6D6D6"
                        android:gravity="left|center"
                        android:hint="City"
                        android:padding="@dimen/_3sdp"
                        android:layout_marginLeft="10dp"
                        android:textSize="17dp"
                        android:textColor="#313031"
                        android:textColorHint="#313031"
                        android:textCursorDrawable="@null"
                        />

                    <ImageButton
                        android:layout_margin="5dp"
                        android:id="@+id/category_autocompleted_btn"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="2dp"
                        android:layout_marginRight="5dp"
                        android:background="#D6D6D6"
                        android:textCursorDrawable="@null"
                        android:src="@drawable/expand_arrow" />

                </RelativeLayout>


                <!--<Spinner
                    android:id="@+id/register_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:drawSelectorOnTop="true"
                    android:dropDownWidth="match_parent"
                    android:gravity="center"
                    android:prompt="@string/discuss_about_header"
                    android:spinnerMode="dialog"
                    android:textSize="16dp" />-->
            </LinearLayout>

        </FrameLayout>

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#D6D6D6">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gen_icon" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="Arial"
                    android:lines="1"
                    android:text="Gender "
                    android:textColor="#313031"
                    android:textSize="17dp"
                    android:textStyle="normal"
                    android:typeface="serif" />

                <RadioGroup

                    android:id="@+id/register_radiogroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="right|center"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <RadioButton
                        android:id="@+id/male_radio_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:buttonTint="#000"
                        android:checked="true"
                        android:scaleX="1.0"
                        android:scaleY="1.0"
                        android:text="Male"
                        android:textColor="#313031"
                        android:textSize="16dp" />

                    <RadioButton
                        android:id="@+id/female_radio_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dip"
                        android:buttonTint="#000"
                        android:checked="false"
                        android:scaleX="1.0"
                        android:scaleY="1.0"
                        android:text="Female"
                        android:textColor="#313031"
                        android:textSize="16dp" />

                </RadioGroup>


            </LinearLayout>

        </FrameLayout>

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#D6D6D6">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pho_icon" />

                <EditText
                    android:id="@+id/register_phone_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:hint="Phone"
                    style="@style/MyAutoCompleteTextView"
                    android:inputType="phone"
                    android:maxLength="20"
                    android:nextFocusDown="@+id/register_password_et"
                    android:textColor="#313031"
                    android:textColorHint="#313031"
                    android:textSize="17dp" />
            </LinearLayout>

        </FrameLayout>


        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#D6D6D6">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/password_confirm" />

                <EditText
                    android:id="@+id/register_password_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:hint="Password"
                    android:maxLength="20"
                    style="@style/MyAutoCompleteTextView"
                    android:inputType="textPassword"
                    android:nextFocusDown="@+id/register_re_password_et"
                    android:textColor="#313031"
                    android:textColorHint="#313031"
                    android:textSize="17dp" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#D6D6D6">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/retype_password" />

                <EditText
                    android:id="@+id/register_re_password_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:hint="Retype Password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:textColor="#313031"
                    android:maxLength="20"
                    style="@style/MyAutoCompleteTextView"
                    android:textColorHint="#313031"
                    android:textSize="17dp" />
            </LinearLayout>

        </FrameLayout>

        <FrameLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="#D6D6D6">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/address_icon" />

                <EditText
                    android:id="@+id/register_address_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:hint="Enter Your Address"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:textColor="#313031"
                    android:textColorHint="#313031"
                    android:maxLines="3"
                    android:maxLength="80"
                    style="@style/MyAutoCompleteTextView"
                    android:textSize="17dp" />
            </LinearLayout>

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="Arial"
                android:gravity="center"
                android:lines="1"
                android:text="By proceeding you are agreeing to our "
                android:textColor="#313031"
                android:textSize="16sp"
                android:textStyle="normal"
                android:typeface="serif" />


            <TextView

                android:id="@+id/terms_condition_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="Arial"
                android:gravity="center"
                android:lines="1"
                android:text="Terms &amp; Conditions"
                android:textColor="#0097db"
                android:textSize="16sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <Button
                android:id="@+id/register_register_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_1sdp"
                android:background="#0097db"
                android:fontFamily="Arial"
                android:gravity="center"
                android:lines="1"
                android:padding="5dp"
                android:text="Register"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:typeface="serif" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>
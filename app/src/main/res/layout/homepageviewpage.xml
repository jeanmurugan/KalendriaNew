<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/hotelDetailsParent"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/gradientbar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/maplayout"
            android:gravity="bottom|center"
            android:orientation="vertical"
            android:paddingLeft="5dp">


            <TextView

                android:id="@+id/home_venu_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:maxLines="1"
                android:text="Venue Name "
                android:textColor="#fff"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/home_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="left"
                android:maxLines="1"
                android:text="Serive Title"
                android:textColor="#fff"
                android:textSize="16sp"
                android:textStyle="normal"
                android:visibility="visible" />


            <RatingBar
                android:id="@+id/home_ratingbar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="left"
                android:layout_alignTop="@+id/thumbnail"
                android:layout_marginLeft="@dimen/_4sdp"
                android:numStars="5"
                android:stepSize="0.5" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/maplayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="bottom|center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_discount_price_txt"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:text=""
                android:textColor="#fff"
                android:textSize="16sp">

            </TextView>

            <TextView
                android:id="@+id/home__price_txt"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:text="225AED"
                android:textColor="#fff"

                />

            <TextView
                android:id="@+id/home_durition"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:text="01:30"
                android:textColor="#fff"

                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/service_nameLable"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="left|center"
            android:paddingLeft="@dimen/_3sdp"
            android:text="Bridel Henna" />

        <TextView
            android:id="@+id/service_duration"
            android:layout_width="60dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_1sdp"
            android:background="#CDEAF8"
            android:gravity="center"
            android:text="00:05"
            android:textColor="#000" />

        <TextView
            android:id="@+id/service_price"
            android:layout_width="70dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_1sdp"
            android:background="#7FCBED"
            android:gravity="center"
            android:text=""
            android:textColor="#000" />

        <TextView
            android:id="@+id/service_deiscount"
            android:layout_width="80dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_1sdp"
            android:background="#0098DC"
            android:gravity="center"
            android:text="500AED"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/servicedateLable"
            android:layout_width="@dimen/_143sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="#fff"
            android:gravity="left|center"
            android:paddingLeft="@dimen/_3sdp"
            android:text="Date/Time" />

        <TextView
            android:id="@+id/service_date"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_weight="1.59"
            android:background="#CDEAF8"
            android:gravity="center"
            android:text="05-02-2016"
            android:textColor="#000" />


        <TextView
            android:id="@+id/service_time"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_1sdp"
            android:layout_weight="1"
            android:background="#0098DC"
            android:gravity="center"
            android:text="05:02-09:50"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/staffname_lable"
            android:layout_width="@dimen/_143sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="#fff"
            android:gravity="left|center"
            android:paddingLeft="@dimen/_3sdp"
            android:text="Select Staff" />

        <RelativeLayout
            android:id="@+id/search_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header">


            <com.kalendria.kalendria.utility.CircularNetworkImageView
                android:id="@+id/thumbnail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="8dp"
                android:visibility="invisible"
                android:background="@drawable/faverote_icon" />

            <TextView
                android:id="@+id/staffName"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_toRightOf="@+id/thumbnail"
                android:background="#fff"
                android:gravity="center"
                android:text="" />


            <ImageButton
                android:id="@+id/category_autocompleted_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="5dp"
                android:background="@android:color/white"
                android:src="@drawable/expand" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>